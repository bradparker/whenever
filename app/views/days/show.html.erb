<nav>
  <ul>
    <li>
      <%= link_to @day.month.starts_at.strftime("%B"), year_month_path(@day.month.year, @day.month) %>
    </li>
    <li>
      <%= link_to "Week #{@day.week.value}, #{@day.week.year.value}", year_week_path(@day.week.year, @day.week) %>
    </li>
  </ul>
</nav>

<h1>
  <%= @day.starts_at.to_s %>
</h1>

<nav>
  <ul>
    <li>
      <%= link_to @day.prev.starts_at.to_s, year_month_day_path(@day.prev.year, @day.prev.month, @day.prev) %>
    </li>
    <li>
      <%= link_to @day.next.starts_at.to_s, year_month_day_path(@day.next.year, @day.next.month, @day.next) %>
    </li>
  </ul>
</nav>

<p>
  <%= link_to 'New Event', new_event_path(starts_at: @day.starts_at) %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Starts at</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @day.events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.starts_at %></td>
        <td><%= event.duration %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
