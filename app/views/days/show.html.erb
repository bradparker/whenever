<nav>
  <ul>
    <li>
      <%= render(Months::LinkComponent.new(month: @day.month)) do %>
        <%= render(Months::NameComponent.new(month: @day.month)) %>
      <% end %>
    </li>
    <li>
      <%= render(Weeks::LinkComponent.new(week: @day.week)) do %>
        <%= render(Weeks::LongNameComponent.new(week: @day.week)) %>
      <% end %>
    </li>
  </ul>
</nav>

<h1>
  <%= @day.starts_at.to_s %>
</h1>

<nav>
  <ul>
    <li>
      <%= render(Days::LinkComponent.new(day: @day.prev)) do %>
        <%= @day.prev.starts_at.to_s %>
      <% end %>
    </li>
    <li>
      <%= render(Days::LinkComponent.new(day: @day.next)) do %>
        <%= @day.next.starts_at.to_s %>
      <% end %>
    </li>
  </ul>
</nav>

<p>
  <%= link_to 'New Event', new_event_path(starts_at: @day.starts_at) %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Starts at</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @day.events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.starts_at %></td>
        <td><%= event.duration %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
