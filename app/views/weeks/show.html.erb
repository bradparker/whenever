<nav>
  <ul>
    <li>
      <%= render(Months::LinkComponent.new(month: @week.month)) do %>
        <%= render(Months::LongNameComponent.new(month: @week.month)) %>
      <% end %>
    </li>
  </ul>
</nav>

<h1>
  <%= render(Weeks::LongNameComponent.new(week: @week)) %>
</h1>

<nav>
  <ul>
    <li>
      <%= render(Weeks::LinkComponent.new(week: @week.prev)) do %>
        <%= render(Weeks::LongNameComponent.new(week: @week.prev)) %>
      <% end %>
    </li>
    <li>
      <%= render(Weeks::LinkComponent.new(week: @week.next)) do %>
        <%= render(Weeks::LongNameComponent.new(week: @week.next)) %>
      <% end %>
    </li>
  </ul>
</nav>

<p>
  <%= link_to "New Event", new_event_path(starts_at: @week.starts_at) %>
</p>

<ul>
  <% @week.days.each do |day| %>
    <li>
      <%= render(Days::LinkComponent.new(day: day)) do %>
        <%= day.value.to_s %>
      <% end %>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Starts at</th>
            <th>Duration</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% day.events.each do |event| %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.starts_at %></td>
              <td><%= event.duration %></td>
              <td><%= link_to "Show", event %></td>
              <td><%= link_to "Edit", edit_event_path(event) %></td>
              <td>
                <%= link_to("Destroy", event, method: :delete, data: {
                  confirm: "Are you sure?",
                }) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </li>
  <% end %>
</ul>
