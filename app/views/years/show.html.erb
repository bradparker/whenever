<h1>
  <%= @year.value %>
</h1>

<p>
  <%= link_to 'New Event', new_event_path(starts_at: @year.starts_at) %>
</p>

<ul>
  <% @year.months.each do |month| %>
    <li>
      <%= link_to month.value, year_month_path(@year, month)  %>

      <ul>
        <% month.weeks.each do |week| %>
          <li>
            <%= link_to week.value, year_week_path(@year, week) %>
          </li>
          <ul>
            <% week.days.each do |day| %>
              <li>
                <%= link_to day.value, year_month_day_path(@year, month, day) %>

                <%= day.event_count %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>

