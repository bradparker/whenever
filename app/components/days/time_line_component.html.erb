<ul
  style="
    height: 60rem;
    display: grid;
    grid-template-rows: repeat(1440, calc(100% / 1440));
    grid-gap: 0 0.25rem;
  "
>
  <% day.events.each do |event| %>
    <li
      style="grid-row: <%= grid_row_start(event) %> / span <%= grid_row_span(event) %>"
      class="bg-gray-400 p-2 rounded leading-tight text-sm truncate"
    >
      <%= render(Events::LinkComponent.new(
        event: event,
        time_range: time_range,
      )) do %>
        <%= event.title %>
      <% end %>
    </li>
  <% end %>
</ul>
