<header class="p-3 md:px-6 bg-gray-800 text-white flex flex-wrap items-center">
  <%= link_to(
    sign_out_path,
    method: :delete,
    class: "block leading-none hover:text-yellow-700 text-sm sm:text-base ml-auto"
  ) do %>
    Sign out
  <% end %>
</header>
<header class="p-3 md:p-6 bg-yellow-400 flex flex-wrap items-center">
  <nav class="w-full">
    <ul class="flex flex-wrap leading-tight sm:text-lg">
      <% containing_ranges.each do |containing_range| %>
        <li class="mr-2">
          <%= render(TimeRanges::LinkComponent.new(
            time_range: containing_range,
            class: "hover:bg-yellow-700 hover:text-white inline-block rounded-full leading-none p-3 bg-yellow-500"
          )) do %>
            <%= containing_range_name(containing_range) %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </nav>

  <h1 class="text-2xl sm:text-4xl leading-tight font-medium py-3 mr-auto">
    <%= display_name %>
  </h1>

  <%= render(TimeRanges::NavigationComponent.new(time_range: time_range)) %>

  <div class="p-3 md:p-6 fixed bottom-0 right-0 z-30">
    <%= render(Events::NewLinkComponent.new(
      time_range: time_range,
      class: "block p-5 rounded-full bg-green-600 text-white leading-none hover:bg-green-800 text-lg shadow-md"
    )) do %>
      <span class="text-lg inline-flex w-5 h-5 items-center justify-center">+</span>
      <span class="ml-3 hidden sm:inline-block">New Event</span>
    <% end %>
  </div>
</header>
