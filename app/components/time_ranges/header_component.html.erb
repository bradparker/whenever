<nav class="w-full flex flex-wrap leading-tight sm:text-lg">
  <% containing_ranges.each do |containing_range| %>
    <%= render(TimeRanges::LinkComponent.new(
      time_range: containing_range,
      class: "hover:bg-yellow-700 hover:text-white inline-block rounded-full leading-none px-3 py-2 bg-yellow-500 mr-2"
    )) do %>
      <%= containing_range_name(containing_range) %>
    <% end %>
  <% end %>
</nav>

<h1 class="text-2xl sm:text-4xl leading-tight font-medium mt-3 mr-auto">
  <%= display_name %>
</h1>

<nav class="mt-3">
  <%= render(TimeRanges::NavigationComponent.new(time_range: time_range)) %>
</nav>

<div class="p-3 md:p-6 fixed bottom-0 right-0 z-30">
  <%= render(Events::NewLinkComponent.new(
    time_range: time_range,
    class: "block p-5 rounded-full bg-green-600 text-white leading-none hover:bg-green-800 text-lg shadow-md"
  )) do %>
    <span class="text-lg inline-flex w-5 h-5 items-center justify-center">+</span>
    <span class="ml-3 hidden sm:inline-block">New Event</span>
  <% end %>
</div>
